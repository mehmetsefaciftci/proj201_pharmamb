generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  STAFF
}

enum OrderStatus {
  DRAFT
  SENT
  PARTIAL
  RECEIVED
  CANCELLED
}

model Pharmacy {
  id             Int             @id @default(autoincrement())
  name           String
  city           String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  users          User[]
  products       Product[]
  purchaseOrders PurchaseOrder[]

  @@index([city])
  @@unique([name, city])
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  passwordHash String
  role         Role      @default(STAFF)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  pharmacyId   Int
  pharmacy     Pharmacy  @relation(fields: [pharmacyId], references: [id], onDelete: Cascade)

  @@index([pharmacyId])
  @@index([role])
}

model Product {
  id         Int       @id @default(autoincrement())
  barcode    String
  name       String
  price      Decimal   @db.Decimal(10, 2)
  stock      Int       @default(0)
  expiryDate DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  pharmacyId Int
  pharmacy   Pharmacy  @relation(fields: [pharmacyId], references: [id], onDelete: Cascade)

  sales      Sale[]

  @@unique([pharmacyId, barcode])
  @@index([pharmacyId])
  @@index([name])
  @@index([expiryDate])
}

model Sale {
  id        Int      @id @default(autoincrement())
  quantity  Int
  unitPrice Decimal  @db.Decimal(10, 2)
  saleDate  DateTime @default(now())

  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([productId])
  @@index([saleDate])
}

model PurchaseOrder {
  id           Int         @id @default(autoincrement())
  supplierName String
  status       OrderStatus @default(DRAFT)
  expectedAt   DateTime?
  total        Decimal?    @db.Decimal(10, 2)
  items        Json
  notes        String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  pharmacyId   Int
  pharmacy     Pharmacy    @relation(fields: [pharmacyId], references: [id], onDelete: Cascade)

  @@index([pharmacyId])
  @@index([status])
  @@index([createdAt])
}
